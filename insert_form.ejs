          <center>
 
           <button type="submit" class="btn btn-default" id="submit">Submit</button>&nbsp;&nbsp;&nbsp;

            <button class="btn btn-default"><a href="./list">Back To Student Registration Form</a></button>
 
         </center>

      </form>

    </div>

